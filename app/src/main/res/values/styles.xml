<resources>

    <!-- Application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="StatusBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/status_bar_h</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- 导航栏样式 -->
    <style name="NaviBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/navi_h</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- 导航栏样式包含状态栏 -->
    <style name="NaviBarIncludeStatusBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/status_add_navi_h</item>
        <item name="android:paddingTop">@dimen/status_bar_h</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--导航栏内元素样式-->
    <style name="NaviBarElement">
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--导航栏内标题样式-->
    <style name="NaviBarTitle" parent="NaviBarElement">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/navi_h</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_size_medium</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
